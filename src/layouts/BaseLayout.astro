---
import '@styles/global.css';
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Personal blog for frontend developer" />
    <title>My Dev Blog</title>
    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100 transition-colors duration-300">
    <Header />
    <slot />
    <Footer />
  </body>
</html> 