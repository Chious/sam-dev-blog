---
import SearchIsland from './SearchIsland.tsx';
---

<div class="search-container">
  <SearchIsland client:load />
</div>

<style is:global>
.search-container {
  position: relative;
  display: inline-block;
}
.search-btn {
  padding: 0.5em 1em;
  border-radius: 6px;
  border: 1px solid #ccc;
  background: #fff;
  cursor: pointer;
}
.search-box {
  position: absolute;
  top: 2.5em;
  left: 0;
  background: #fff;
  border: 1px solid #eee;
  border-radius: 8px;
  padding: 1em;
  width: 300px;
  z-index: 10;
}
.search-input {
  width: 100%;
  padding: 0.5em;
  margin-bottom: 0.5em;
}
.search-results {
  list-style: none;
  margin: 0;
  padding: 0;
}
.search-result-item {
  padding: 0.5em 0;
  border-bottom: 1px solid #f0f0f0;
}
.title {
  font-weight: bold;
}
.tags {
  margin-top: 0.25em;
}
.tag {
  display: inline-block;
  background: #f3f3f3;
  color: #666;
  border-radius: 4px;
  padding: 0.1em 0.5em;
  margin-right: 0.25em;
  font-size: 0.85em;
}
</style>