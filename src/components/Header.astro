---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/notes', label: 'Notes' },
];
---
<header class="w-full px-4 py-3 flex items-center justify-between bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-800">
  <div class="flex items-center gap-2">
    <img src="/favicon.svg" alt="Logo" class="w-8 h-8" />
    <span class="font-bold text-lg tracking-tight">My Dev Blog</span>
  </div>
  <nav class="flex gap-4">
    {navLinks.map(link => (
      <a href={link.href} class="hover:underline text-gray-700 dark:text-gray-200">{link.label}</a>
    ))}
    <button id="dark-toggle" class="ml-4 px-2 py-1 rounded bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-100" aria-label="Toggle dark mode">
      <svg id="icon-sun" class="w-5 h-5 inline-block dark:hidden" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="12" r="5"/><path d="M12 1v2m0 18v2m11-11h-2M3 12H1m16.95 7.07l-1.41-1.41M6.34 6.34L4.93 4.93m12.02 0l-1.41 1.41M6.34 17.66l-1.41 1.41"/></svg>
      <svg id="icon-moon" class="w-5 h-5 hidden dark:inline-block" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M21 12.79A9 9 0 1111.21 3a7 7 0 109.79 9.79z"/></svg>
    </button>
  </nav>
  <script>
    // Simple dark mode toggle
    const btn = document.getElementById('dark-toggle');
    btn?.addEventListener('click', () => {
      const html = document.documentElement;
      const isDark = html.classList.toggle('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
    // On load, set theme from localStorage
    if (typeof window !== 'undefined') {
      const theme = localStorage.getItem('theme');
      if (theme === 'dark') document.documentElement.classList.add('dark');
      else document.documentElement.classList.remove('dark');
    }
  </script>
</header> 