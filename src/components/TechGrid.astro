---
import type { TechItem } from '@/data/techStack';
import styles from '@/styles/TechStack.module.css';

export interface Props {
  technologies: TechItem[];
}

const { technologies } = Astro.props;
---

<div class={styles.techGrid}>
  {technologies.map((tech) => (
    <div class={styles.techItem}>
      <span class={styles.techIcon}>{tech.icon}</span>
      <h3 class={styles.techName}>{tech.name}</h3>
      <p class={styles.techDesc}>{tech.description}</p>
    </div>
  ))}
</div> 