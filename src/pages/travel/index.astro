<script define:vars={{ wishes }}>
  document.addEventListener('DOMContentLoaded', function() {
    const wishDisplay = document.getElementById('wish-display');
    const wishButton = document.getElementById('wish-button');
    
    if (!wishDisplay || !wishButton) return;
    
    wishButton.addEventListener('click', function() {
      // 先淡出
      wishDisplay.style.opacity = '0';
      wishDisplay.style.transform = 'scale(0.95)';
      
      setTimeout(() => {
        // 隨機選擇願望
        const randomWish = wishes[Math.floor(Math.random() * wishes.length)];
        
        // 更新內容和樣式
        wishDisplay.innerHTML = `<p class="text-2xl font-bold text-amber-600">💫 ${randomWish}</p>`;
        wishDisplay.className = "min-h-[120px] mb-8 p-8 rounded-lg border-2 border-amber-300 bg-amber-50 flex items-center justify-center transition-all duration-500";
        
        // 淡入
        wishDisplay.style.opacity = '1';
        wishDisplay.style.transform = 'scale(1)';
        
        // 更新按鈕文字
        wishButton.innerHTML = '🎲 再來一個';
      }, 250);
    });
  });
</script>
