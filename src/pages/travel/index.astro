import BaseLayout from '@layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const travelPoints = ["國聖燈塔","鵝鑾鼻燈塔","三貂角燈塔","富貴角燈塔"]
const wishes = [
            "考浮潛證照、去參加浮潛",
            "租一台腳踏車、單車東環",
            "報名馬拉松比賽：萬金石、金剛",
            "到山上泡湯、露營",
            "台東看星星",
            "出國"
        ];

// 取得所有旅遊文章，按日期排序
const travelPosts = await getCollection('travel' as any) as any[];
const sortedPosts = travelPosts
  .filter((post: any) => post.data.date)
  .sort((a: any, b: any) => {
    const dateA = a.data.date ? new Date(a.data.date).getTime() : 0;
    const dateB = b.data.date ? new Date(b.data.date).getTime() : 0;
    return dateB - dateA;
  })
  .slice(0, 6); // 只取前6篇

// 地區映射
const areaLabels: Record<string, string> = {
  north: '北部',
  central: '中部',
  south: '南部',
  east: '東部'
};

// 地區顏色
const areaColors: Record<string, string> = {
  north: 'bg-blue-500',
  central: 'bg-green-500',
  south: 'bg-orange-500',
  east: 'bg-purple-500'
};

// 解析檔案名稱以獲取 slug
function getSlugFromId(id: string) {
  return id.replace(/\.md$/, '');
}
